<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyKho.ThemSuaXoaSanPham.Seo_ThemSanPhamMoi">
    <androidx.appcompat.widget.Toolbar
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000000" />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Mở hàm-->
            <LinearLayout
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Nhà cung cấp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="17dp"
                        android:drawableRight="@drawable/imgdropdow"
                        android:textColor="#B6B6B6"
                        android:text="Vui lòng chọn nhà cung cấp"
                        android:id="@+id/btnChonNhaCungCap"
                        android:layout_weight="9"
                        android:padding="10dp"
                        android:background="@drawable/item_boder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:id="@+id/btnThemNhaCungCap"
                        android:layout_marginLeft="10dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/themsanpham"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Danh mục sản phẩm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="17sp"
                        android:drawableRight="@drawable/imgdropdow"
                        android:textColor="#B6B6B6"
                        android:text="Vui lòng chọn danh mục sản phẩm"
                        android:id="@+id/btnChonDanhMucSanPham"
                        android:layout_weight="9"
                        android:padding="10dp"
                        android:background="@drawable/item_boder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:id="@+id/btnThemDanhMuc"
                        android:layout_marginLeft="10dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/themsanpham"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Tên sản phẩm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="text"
                        android:hint="Vui lòng nhập tên sản phẩm"
                        android:id="@+id/edit_TenSanPham"
                        android:padding="10dp"
                        android:background="@drawable/item_boder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </LinearLayout>
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Quy cách"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <!--Mở hàm -->
                        <LinearLayout
                            android:id="@+id/layoutQuyCach1"
                            android:weightSum="10"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edit_QK1"
                                android:padding="10dp"
                                android:background="@drawable/item_boder"
                                android:inputType="number"
                                android:layout_weight="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </EditText>
                            <EditText
                                android:id="@+id/edit_QK2"
                                android:padding="10dp"
                                android:background="@drawable/item_boder"
                                android:inputType="number"
                                android:layout_weight="5"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </EditText>
                        </LinearLayout>
                        <!--Đóng hàm -->

                        <!--Mở hàm -->
                        <LinearLayout
                            android:id="@+id/layoutQuyCach2"
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edit_QK3"
                                android:padding="10dp"
                                android:background="@drawable/item_boder"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </EditText>
                        </LinearLayout>
                        <!--Đóng hàm -->


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnChuyenDoiNhapQuyCach"
                        android:layout_marginLeft="10dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/hinhchuyendoi"
                            android:src="@drawable/imgchuyendoiquycach"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Mở hàm 1-->
                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:text="Trọng lượng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/item_boder"
                        android:weightSum="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_TrongLuong"
                            android:inputType="number"
                            android:layout_weight="6"
                            android:padding="9dp"
                            android:background="@drawable/item_boderotrongluong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </EditText>
                        <TextView
                            android:id="@+id/btnTrongLuong"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/imgdropdow"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="40dp">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--Kết thúc hàm-->

                <!--Mở hàm 2-->
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:text="Độ dày"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/item_boder"
                        android:weightSum="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_DoDay"
                            android:inputType="number"
                            android:layout_weight="6"
                            android:padding="9dp"
                            android:background="@drawable/item_boderotrongluong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </EditText>
                        <TextView
                            android:id="@+id/btnDoDay"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/imgdropdow"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="40dp">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--Kết thúc hàm 2-->

            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Mở hàm 1-->
                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:text="Độ dài"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/item_boder"
                        android:weightSum="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_DoDai"
                            android:inputType="number"
                            android:layout_weight="6"
                            android:padding="9dp"
                            android:background="@drawable/item_boderotrongluong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </EditText>
                        <TextView
                            android:id="@+id/btnDoDai"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/imgdropdow"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="40dp">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--Kết thúc hàm-->

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:text="Khác"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_ThuocTinhKhac"
                            android:inputType="text"
                            android:padding="10dp"
                            android:background="@drawable/item_boder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </EditText>
                    </LinearLayout>
                </LinearLayout>
                <!--Kết thúc hàm-->
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Giá sỉ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:background="@drawable/item_boder"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edit_GiaSi"
                        android:inputType="number"
                        android:hint="Nhập giá sỉ"
                        android:textColor="#B6B6B6"
                        android:layout_weight="7"
                        android:padding="10dp"
                        android:background="@drawable/item_boderotrongluong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </EditText>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/btnDonViCuaGiaSi"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/imgdropdow"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:layout_marginBottom="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Giá lẻ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:background="@drawable/item_boder"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edit_GiaLe"
                        android:inputType="number"
                        android:hint="Nhập giá lẻ"
                        android:textColor="#B6B6B6"
                        android:layout_weight="7"
                        android:padding="10dp"
                        android:background="@drawable/item_boderotrongluong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </EditText>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/btnDonViCuaGiaLe"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/imgdropdow"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Kết thúc hàm-->

            <!--Mở hàm-->
            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnSuaSanPham"
                    android:textAllCaps="false"
                    android:textColor="#03A9F4"
                    android:textStyle="bold"
                    android:text="Cập nhật sản phẩm"
                    android:background="@drawable/item_borderbuttonblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
            <!--Kết thúc hàm-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>