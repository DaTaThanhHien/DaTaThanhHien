<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_boderlogin">

        <LinearLayout
            android:weightSum="20"
            android:id="@+id/popup_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_weight="18"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Tên sản phẩm:"
                        android:textColor="#000000"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/txtTenSP"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="right"
                        android:text="Sắt U"
                        android:textColor="#000000">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Thuộc tính:"
                        android:textColor="#000000"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="7dp"
                        android:id="@+id/txtTrongLuong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="13.5"
                        android:textColor="#000000">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Giá nhập:"
                        android:textColor="#000000"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:id="@+id/edit_GiaNhap"
                        android:padding="6dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/item_boder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#F44336"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:text="Số lượng:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:gravity="center"
                        android:weightSum="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/ibGiam"
                            android:src="@drawable/imgminus"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </ImageButton>

                        <EditText
                            android:id="@+id/edit_SoLuong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@drawable/item_boder"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="7dp"
                            android:text="1">

                        </EditText>
                        <ImageButton
                            android:id="@+id/ibTang"
                            android:src="@drawable/imgplus"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                        </ImageButton>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:text="Đơn vị nhập:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:textStyle="bold"
                            android:id="@+id/txtDonViNhap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@drawable/item_boder"
                            android:inputType="number"
                            android:padding="10dp"
                            android:text="Cây"
                            android:drawableRight="@drawable/imgdropdow">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:text="Đơn vị chuyển:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/txtSLQuyDoi1"
                                    android:text="90 hộp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/txtSLQuyDoi2"
                                    android:text="90 hộp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Ghi chú:">

                    </TextView>

                    <EditText
                        android:hint="Nếu có"
                        android:id="@+id/edit_GhiChu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/item_boder"
                        android:gravity="top"
                        android:inputType="text"
                        android:padding="5dp">

                    </EditText>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:weightSum="10">
                <Button
                    android:id="@+id/btnThanhToan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#03A9F4"
                    android:padding="5dp"
                    android:text="Nhập hàng: 0 VNĐ"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"></Button>

                <Button
                    android:id="@+id/btnTiepTuc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="#4CAF50"
                    android:drawableRight="@drawable/imgnext"
                    android:padding="5dp"
                    android:text="Tiếp tục"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingRight="20dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnclosedialog"
            android:src="@drawable/imgclose"
            android:layout_width="35dp"
            android:layout_height="35dp">
        </ImageView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>