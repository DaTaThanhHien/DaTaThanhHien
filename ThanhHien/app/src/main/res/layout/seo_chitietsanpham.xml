<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyKho.SanPhamKho.Seo_ChiTietSanPham">
    <androidx.appcompat.widget.Toolbar
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000000" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_borderquanly"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenSanPham"
                android:layout_marginBottom="10dp"
                android:lines="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Seo nè "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Giá: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:textColor="#FF0000"
                    android:gravity="right"
                    android:text="20,000 VNĐ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--mở hàm đầu-->
                <LinearLayout
                    android:background="@drawable/item_boderrightcolorgray"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:weightSum="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Dài:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:text="5 m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Dày:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:text="5 m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--đóng hàm-->
                <!--mở hàm tiếp-->
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Nặng:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:text="5 m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Khác:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:text="5 m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--đóng tiếp-->
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số lượng tồn: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtSoLuongTon"
                        android:textStyle="bold"
                        android:text="30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/txtDonViTinh1"
                        android:layout_marginLeft="5dp"
                        android:text="Cây"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số lượng nhập: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtSoLuongNhap"
                        android:textStyle="bold"
                        android:text="60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/txtDonViTinh2"
                        android:layout_marginLeft="5dp"
                        android:text="Cây"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnNgayKhac"
            android:background="@drawable/item_borderquanly"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/txtNgay"
                android:textStyle="bold"
                android:textSize="35sp"
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <TextView
                     android:drawableRight="@drawable/imgdropdow"
                     android:layout_marginBottom="5dp"
                     android:textSize="18sp"
                     android:text="Hôm nay"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                 </TextView>
                 <TextView
                     android:id="@+id/txtNgayThangNam"
                     android:text="2020-01-06"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                 </TextView>
             </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ListView
                    android:layout_weight="13"
                    android:scrollbars="none"
                    android:id="@+id/listViewLichSuNhapXuat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </ListView>
            <LinearLayout
                android:gravity="bottom"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:layout_weight="5"
                    android:id="@+id/btnXoaSanPham"
                    android:textAllCaps="false"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:text="Xóa sản phẩm"
                    android:background="@drawable/item_borderbottonred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
                <Button
                    android:layout_weight="5"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnSuaSanPham"
                    android:textAllCaps="false"
                    android:textColor="#03A9F4"
                    android:textStyle="bold"
                    android:text="Sửa sản phẩm"
                    android:background="@drawable/item_borderbuttonblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>