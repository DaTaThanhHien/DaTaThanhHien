<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhapXuatHang.Seo_ThanhToanNhapHang">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#000000" />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="25"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="23"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Tên phiếu nhập"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edit_TenPhieuNhap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_boder"
                        android:hint="Tên phiếu nhập"
                        android:inputType="text"
                        android:padding="7dp"
                        android:textColor="#000000"></EditText>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/llNhaCungCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Bên bán"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_weight="13"
                        android:id="@+id/edit_TenNhaCungCap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_boder"
                        android:enabled="false"
                        android:padding="7dp"
                        android:text="Tôn hoa sen">

                    </EditText>
                    <TextView
                        android:id="@+id/btnBottomChonNhaCungCapKhac"
                        android:textColor="#03A9F4"
                        android:background="@drawable/item_borderbuttonblue"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:padding="7dp"
                        android:layout_weight="2"
                        android:text="Khác"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Thông Tin"
                        android:textColor="#000000"
                        android:textStyle="bold"></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <EditText
                            android:gravity="top"
                            android:id="@+id/edit_ThongTin"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/item_boder"
                            android:hint=""
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="#000000">

                        </EditText>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:text="Ngày nhập:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="9"
                        android:inputType="datetime"
                        android:hint="16/05/2020"
                        android:id="@+id/edit_NgayThem"
                        android:padding="7dp"
                        android:background="@drawable/item_boder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </EditText>
                    <LinearLayout
                        android:id="@+id/btnNgayThem"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/imgngaythem"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ngày nhập"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="gone">

                </TextView>

                <EditText
                    android:id="@+id/editNgayNhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_boder"
                    android:hint="Ngày nhập"
                    android:padding="7dp"
                    android:text="2020-02-27"
                    android:visibility="gone">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Ngày nhập"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="gone">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_boder"
                    android:hint="Ngày nhập"
                    android:padding="7dp"
                    android:text="2020-02-27"
                    android:visibility="gone">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Trạng thái:"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_boderbutton"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Đang sử lý"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tổng thành tiền:"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/txtTongTien"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_button"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="350,000,000 VNĐ"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thanh toán:"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <EditText
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:id="@+id/editThanhToan"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_borderbuttonblue"
                        android:gravity="center"
                        android:hint="Thanh toán"
                        android:inputType="number"
                        android:padding="7dp"
                        android:text="0"
                        android:textColor="#F44336"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tiền còn lại:"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/txtTienConLai"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_boderbutton"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="7dp"
                        android:text="35,000 VNĐ"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Tên hàng"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Số lượng"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Đ.Giá"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="T.Tiền"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/recyclerViewListSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChuaBTN"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_gravity="bottom"
                android:layout_weight="5"
                android:id="@+id/btnNhapHang"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:text="Lưu"
                android:background="#03A9F4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:drawableRight="@drawable/imgprint"
                android:layout_weight="5"
                android:id="@+id/btnNhapHangVaIn"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:text="Hoàn thành nhập"
                android:background="#4CAF50"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>

    </LinearLayout>


    </ScrollView>
</LinearLayout>