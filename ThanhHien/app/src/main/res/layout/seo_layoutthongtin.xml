<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Nhà cung cấp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/edit_TenNhaCungCap"
            android:text="Tôn hoa sen"
            android:padding="7dp"
            android:background="@drawable/item_boder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Trạng thái:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTinhTrangPhieuNhap"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="Đang sử lý"
                android:padding="7dp"
                android:background="@drawable/item_boderbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Tổng thành tiền:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTongTien"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="350,000,000 VNĐ"
                android:padding="7dp"
                android:background="@drawable/item_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Thanh toán:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:text="0"
                android:id="@+id/editThanhToan"
                android:hint="Thanh toán"
                android:inputType="number"
                android:padding="7dp"
                android:gravity="center"
                android:textColor="#F44336"
                android:background="@drawable/item_borderbuttonblue"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Tiền còn lại:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTienConLai"
                android:textStyle="bold"
                android:text="35,000 VNĐ"
                android:inputType="number"
                android:padding="7dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/item_boderbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>